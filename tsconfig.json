{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "./dist",
        "watch": false,
        "noUnusedLocals": true,
        "strict": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "jsx": "react"
    },
    "include": ["src/**/*"]
}
